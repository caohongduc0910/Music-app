section.vh-100
  .container-fluid.h-custom
    .row.d-flex.justify-content-center.align-items-center.h-100
      .col-md-9.col-lg-6.col-xl-5
        img.img-fluid(src='https://www.loudly.com/wp-content/uploads/2024/07/ethical_collage1.png' alt='Sample image')
      .col-md-8.col-lg-6.col-xl-4.offset-xl-1
        form(action='' method='POST')
          .d-flex.flex-row.align-items-center.justify-content-center.justify-content-lg-start
            p.lead.fw-normal.mb-0.me-3 Sign up with
            button.btn.btn-primary.btn-floating.mx-1(type='button')
              i.fab.fa-facebook-f
            button.btn.btn-primary.btn-floating.mx-1(type='button')
              i.fab.fa-twitter
            button.btn.btn-primary.btn-floating.mx-1(type='button')
              i.fab.fa-linkedin-in
          .divider.d-flex.align-items-center.my-4
            p.text-center.fw-bold.mx-3.mb-0 Or
          // Username input
          .row
            .col-6
              .form-floating.mb-3
                input#floatingInput.form-control(type='text' placeholder='nguyen van a' name='name')
                label(for='floatingInput') Full Name
            .col-6
              .form-floating.mb-3
                input#floatingInput.form-control(type='date' placeholder='09/10/2003' name='dob')
                label(for='floatingInput') Date of Birth
          .form-floating.mb-3
            input#floatingInput.form-control(type='text' placeholder='name@example.com' name='email')
            label(for='floatingInput') Username
          // Password input
          .form-floating.mb-3
            input#floatingPassword.form-control(type='password' placeholder='Password' name='password')
            label(for='floatingPassword') Password
          // CFPassword input
          .form-floating.mb-3
            input#floatingPassword.form-control(type='password' placeholder='Password' name='cfpassword')
            label(for='floatingPassword') Confirm Password
          .d-flex.justify-content-between.align-items-center
          .text-center.text-lg-start.pt-2
            button.btn.btn-primary(type='submit' name='submit' style='padding-left: 2.5rem; padding-right: 2.5rem;') Sign up
  .d-flex.flex-column.flex-md-row.text-center.text-md-start.justify-content-between.py-4.px-4.px-xl-5.bg-primary
