extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/format-time.pug

block main
  .singer-detail
    .container.my-3
      .row
        .col-12
          .inner-title #{song.title}
          .inner-actions
            div(class="inner-action inner-time")
              <i class="fa-regular fa-clock"></i> 
                +formatTime(song.createdAt)
            div(class="inner-action inner-singer")
              <i class="fa-solid fa-microphone-lines"></i> #{singer.fullName}
            div(class="inner-action inner-topic")
              <i class="fa-solid fa-music"></i> #{topic.title}
            if(user)
              div(class=`inner-action inner-like ${song.isLikeSong ? "active" : ""}` button-like=song.id)
                <i class="fa-regular fa-thumbs-up"></i>
                span <span data-like>#{song.like.length}</span> thích
              div(class=`inner-action inner-heart ${song.isFavoriteSong ? "active" : ""}` button-favorite=song.id)
                <i class="fa-regular fa-heart"></i> Bài hát yêu thích
            div(class=`inner-action inner-listen`)
              <i class="fa-solid fa-headphones"></i>
              span <span data-listen>#{song.listen}</span> lượt nghe
          .inner-play
            .inner-avatar
              img(src=song.avatar)
            .inner-audio
              div(id="aplayer" data-song=song data-singer=singer)

          .inner-desc
            .inner-label Mô tả
            .inner-text
              | !{song.description}

          .inner-desc
            .inner-label Lời bài hát
            .inner-text
              | !{song.lyrics}